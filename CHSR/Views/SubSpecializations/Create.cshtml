@model CHSR.Models.SubSpecialization

@{
    ViewData["Title"] = "Create";
   Specialization specialization = (Specialization)ViewData["specialization"];

}


<h1>Create</h1>

<h4>SubSpecialization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                Add Sub-Specialization under @specialization.Name
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <input type="hidden" name="specializationID" value="@specialization.Id" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

