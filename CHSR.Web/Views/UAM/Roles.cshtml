
@model ReflectionIT.Mvc.Paging.PagingList<IdentityRole>

@{
    ViewData["Title"] = "RoleList";
    ViewData["Name"] = "Role List";

    var roles = ViewData["RoleList"] as List<IdentityRole>;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div>
                    <i class="fa fa-align-justify"></i> Role List

                    <div class="text-right">
                        <a asp-controller="UAM" asp-action="CreateRole" class="btn btn-primary" role="button">Create New Role</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in roles)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    @*<a asp-controller="UAM" asp-action="RoleDetail" class="btn btn-primary" role="button">Detail</a>*@
                                    <a asp-controller="UAM" asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger" role="button">Remove</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#">Prev</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">4</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>