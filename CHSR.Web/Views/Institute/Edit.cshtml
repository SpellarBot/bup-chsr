
@{
    ViewData["Title"] = "Edit";
    var institute = ViewData["Institute"] as Institute;
}



<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Institute</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@institute.Id" />
        <div class="form-group">
            <label asp-for="@institute.InstituteName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@institute.InstituteName" class="form-control" />
                <span asp-validation-for="@institute.InstituteName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

